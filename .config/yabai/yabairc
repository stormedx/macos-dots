yabai -m config layout bsp

#borders
yabai -m config window_placement second_child
yabai -m config window_border on
yabai -m config window_border width 6
yabai -m config active_window_border_color 0xe39d93


# padding
yabai -m config top_padding 20
yabai -m config bottom_padding 20
yabai -m config left_padding 20
yabai -m config right_padding 20
yabai -m config window_gap 20


# mouse settings

yabai -m config mouse_follows_focus on

yabai -m config mouse_modifier alt
# left click + drag
yabai -m config mouse_action1 move
# right click + drag
yabai -m config mouse_action2 resize

yabai -m mouse_drop _action swap

# Disable specific apps, aka float windows.
yabai -m rule --add app="^Finder$" manage=off
yabai -m rule --add app="^VLC$" manage=off
yabai -m rule --add app="^System Settings$" manage=off
yabai -m rule --add app="^Calculator$" manage=off
yabai -m rule --add app="^News$" manage=off
yabai -m rule --add app="^Parallels Desktop$" manage=off
yabai -m rule --add app="^Adobe Photoshop 2023$" manage=off
yabai -m rule --add app="^Adobe InDesign 2022$" manage=off
yabai -m rule --add app="^Adobe Illustrator 2023$" manage=off
yabai -m rule --add app="^Dolphin$" manage=off
yabai -m rule --add app="^VMWare Fusion$" manage=off
yabai -m rule --add app="^CrossOver$" manage=off
yabai -m rule --add app="^Github Desktop$" manage=off
yabai -m rule --add app="^Bitwarden$" manage=off
yabai -m rule --add app="^Xcode$" manage=off
yabai -m rule --add app="^Docker Desktop$" manage=off
yabai -m rule --add app="^Clock$" manage=off
yabai -m rule --add app="^Messages$" manage=off
yabai -m rule --add app="^Weather$" manage=off
yabai -m rule --add app="^Raycast$" manage=off
